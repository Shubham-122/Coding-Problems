def zeroes_and_ones(arr):
    i=0
    j=i+1
    while(j<len(arr)):
        if(arr[j]==0) :
            arr[i],arr[j]=arr[j],arr[i]
            i+=1
            j+=1
        else:
            
            j+=1
    return arr

arr=[0,1,1,0,1,0,0,1]
arr2=[0 ,1 ,0 ,1 ,1 ,0 ,0]
print(zeroes_and_ones(arr2))
            